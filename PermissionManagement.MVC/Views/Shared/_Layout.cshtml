<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SENASOFT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/paper-dashboard.css?v=2.0.1" />
</head>
<body id="fondo" class="my-login-page">
    <div class="sidebar" data-color="white" data-active-color="danger">
        <div class="logo text-center">
            <a href="#" class="simple-text logo-normal">
                FileOrganizerSoft
            </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="active ">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"><p>Home</p></a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-controller="Users" asp-action="Index">Users</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-controller="FacturasModels" asp-action="Index">Users</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Roles</a>
                    <a href="javascript:;">
                        <!--i class="nc-icon nc-diamond"></i-->
                        <p>Second Item</p>
                    </a>
                </li>
                <li>
                    <a href="javascript:;">
                        <!--i class="nc-icon nc-pin-3"></i-->
                        <p>Third Item</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!--div class="container"-->
    <div class="main-panel" style="height: 100vh;">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                    <a class="navbar-brand" href="javascript:;">Title</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted text-center">
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>