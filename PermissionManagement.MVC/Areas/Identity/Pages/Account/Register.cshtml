@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_LayoutLogin";
}



<div class="row justify-content-md-center h-100">
    <div class="card-wrapper-regis">
        <div class="card fat">
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>@ViewData["Title"]</h4>
                    <h6>Crea una cuenta</h6>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.FirstName">Nombre:</label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Email">Correo Eletrónico:</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Contraseña</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Input.LastName">Apellidos:</label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Cedula">Cédula:</label>
                                <input asp-for="Input.Cedula" class="form-control" />
                                <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña:</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
                    <div class="form-group text-center">
                        <p>
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Regresar</a>
                        </p>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
