@page
@model LoginModel
    <head>
        <link rel="stylesheet" href="~/css/my-login.css" />
    </head>

@{
    ViewData["Title"] = "Inicio";
    Layout = "_LayoutLogin";
}


<div class="row justify-content-md-center h-100">
    <div class="card-wrapper">
        <div class="card fat">
            <div class="card-body">
                <section>
                    <form id="account" method="post">
                        <h4>@ViewData["Title"]</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">Correo:</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Contraseña:</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    Recordar datos
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                        </div>
                        <div class="form-group text-center">
                            <p>
                                Olvido contraseña. De click <a id="forgot-password" asp-page="./ForgotPassword">Aquí.</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿Eres nuevo? Registrate</a>
                            </p>

                        </div>
                    </form>
                </section>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
